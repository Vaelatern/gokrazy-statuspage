{{ end }}

{{ define "ServerIcon" }}
<svg
  class="w-6 h-6 text-gray-700"
  xmlns="http://www.w3.org/2000/svg"
  width="24"
  height="24"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  strokeWidth="2"
  strokeLinecap="round"
  strokeLinejoin="round"
>
  <rect width="20" height="8" x="2" y="2" rx="2" ry="2" />
  <rect width="20" height="8" x="2" y="14" rx="2" ry="2" />
  <line x1="6" x2="6.01" y1="6" y2="6" />
  <line x1="6" x2="6.01" y1="18" y2="18" />
</svg>
{{ end }}

{{ define "Card" }}
 <div style="position: relative; width: 100%; padding-bottom: 100%;">
   <div class="flex items-center justify-center rounded-md border p-8 flex flex-col justify-between p-4 {{ if .IsOK }} bg-green-200 {{ else if .IsError }} bg-red-400 {{ end }} h-full"
   style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;">
   <div class="text-lg font-bold">{{ .Title }}</div>
   <div class="text-3xl font-bold flex justify-end">{{ .Metric }}</div>
   {{- if .ShowHeartPulseIcon }}
    {{ template "HeartPulseIcon" }}
   {{- else if .ShowServerIcon }}
    {{ template "ServerIcon" }}
   {{ else }}
    <div className="text-sm flex justify-end">{{ .IconText }}</div>
   {{- end }}
  </div>
 </div>
{{ end }}

{{ define "Main" }}
<div class="w-screen h-screen bg-gray-900 flex justify-center items-center">
  <div class="grid grid-cols-3 gap-4 w-full h-full p-4">
    {{ range .Cards }}
      {{ template "Card" . }}
    {{ end }}
  </div>
</div>
{{ end }}
